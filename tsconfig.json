{
  "compilerOptions": {
  
    "target": "es5",                                
    "module": "commonjs",                          
    "strict": true,
    "outDir": "./dist",
    "strictPropertyInitialization": false,                                
    "esModuleInterop": true,

    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,

  },
  "include": ["src/**/*", "__tests__/**/*"]
}
